<br>
<h2 class="text-center">Sign up</h2>
<br>

<div class="bg-text">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "shared/devise_messages" %>
        <div class="field">
            <%= f.text_field :fullname, placeholder: "Full Name", class: "form-control is-valid m-4 col-md-4 mx-auto" %>
        </div>

        <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "email", class:"form-control is-valid m-4 col-md-4 mx-auto" %>
        </div>

        <div class="field">
            <%= f.password_field :password, placeholder: "new-password", class:"form-control is-valid m-4 col-md-4 mx-auto" %>
        </div>

        <div class="actions text-center">
            <%= f.submit "Sign up", class:"form-control col-md-4 btn btn-danger mx-auto" %>
        </div>
    <% end %>
    <div class="actions text-center">
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class:"form-control m-4 col-md-4 btn btn-primary mx-auto" %>
    </div>
</div>



