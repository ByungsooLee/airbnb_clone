<br>
<h2 class="text-center">Log in</h2>
<br>

<div class="bg-text">
    <div class="col-sm-6 mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "shared/devise_messages" %>
            
            <div class="field form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control is-valid m-4 col-md-8 mx-auto" %>
            </div>

            <div class="field form-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control is-valid m-4 col-md-8 mx-auto" %>
            </div>

            <div class="text-center">
                <% if devise_mapping.rememberable? %>
                    <div class="field d-inline">
                        <%= f.check_box :remember_me  %>
                        <%= f.label :remember_me %>
                    </div>
                <% end %>
                <%= render "devise/shared/links" %>
            </div>

            <div class="actions text-center">
                <%= f.submit "Log in", class:"form-control col-md-8 btn btn-danger mx-auto" %>
            </div>

            <div class="actions text-center">
                <%= f.submit "Sign in with Facebook", class:"form-control m-4 col-md-8 btn btn-primary mx-auto" %>
            </div>

        <% end %>
        </div>
</div>

