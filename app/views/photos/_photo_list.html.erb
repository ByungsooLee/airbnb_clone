<div class="row">
    <% if @photos %>
        <% @photos.each do |photo| %>
            <div class="col-4">
                <div class="card">
                    <%= link_to room_photo_path(photo.room_id, photo), remote: true, method: :delete, data: {confirm: "Are you sure?"} do %>
                        <i class="fa fa-trash"></i>
                    <% end %>
                    <%= image_tag photo.image.url, class: "w-100" %>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
