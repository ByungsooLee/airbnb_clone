 <div class="container">
    <div class="row">
        <%= render "layouts/sidebar" %> 
        <div class="mt-4 col-9">
            <div class="card">
                <div class="card-header text-white bg-success">Location</div>
                <div class="card-body">
                    <div class="container">
                        <%= form_for @room do |f| %>
                            <div class="form-group">
                                <label>Location</label>
                                <%= f.text_field :location, placeholder: "What is your addres?", class: "form-control", required: "true" %>
                            </div>
                            <div><%= f.submit "Save", class: "btn btn-success" %></div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
