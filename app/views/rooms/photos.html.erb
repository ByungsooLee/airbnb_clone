 <div class="container">
    <div class="row">
        <%= render "layouts/sidebar" %> 
        <div class="mt-4 col-9">
            <div class="card">
                <div class="card-header text-white bg-success">Photos</div>
                <div class="card-body">
                    <div class="container mx-auto">
                        <div class="mx-auto">
                            <%= form_for @room, url: room_photos_path(@room), method: :post, html: {multipart: true} do |f| %>
                                <div class="form-group">
                                    <%= file_field_tag "images[]", type: :file, multiple: true, class: "form-control col-4 mx-auto" %>
                                </div>
                                <div class="mx-auto" style="width: 115px;">
                                    <%= f.submit "Add Photo", class: "btn btn-success", type: "submit" %>
                                </div>
                            <% end %>
                        </div>
                        <br>
                        <br>
                        <%= render "photos/photo_list"%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
