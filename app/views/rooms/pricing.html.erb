 <div class="container">
    <div class="row">
        <%= render "layouts/sidebar" %> 
        <div class="mt-4 col-9">
            <div class="card">
                <div class="card-header text-white bg-success">Pricing</div>
                <div class="card-body">
                    <div class="container">
                        <%= form_for @room do |f| %>
                            <div class="form-group">
                                <%= f.label :price %><br>
                                <%= f.text_field :price, placeholder: "eg: $100", class: "form-control" %>
                            </div>
                            <div><%= f.submit "Save", class: "btn btn-success" %></div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
