 <div class="container">
    <div class="row">
        <%= render "layouts/sidebar" %> 
        <div class="mt-4 col-9">
            <div class="card">
                <div class="card-header text-white bg-success">Amenities</div>
                <div class="card-body">
                    <div class="container">
                        <%= form_for @room do |f| %>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <%= f.check_box :has_tv, class: "custom-control-input" %>
                                        <label class="custom-control-label">TV</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <%= f.check_box :has_kichen, class: "custom-control-input" %>
                                        <label class="custom-control-label">Kichen</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <%= f.check_box :has_internet, class: "custom-control-input" %>
                                        <label class="custom-control-label">Internet</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <%= f.check_box :has_aircon, class: "custom-control-input" %>
                                        <label class="custom-control-label">Air Conditioning</label>
                                    </div>
                                </div>
                            </div>
                            <div><%= f.submit "Save", class: "btn btn-success" %></div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



